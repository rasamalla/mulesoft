http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">
    <http:listener-config name="HTTP_Listener_Configuration" host="0.0.0.0" port="6524" doc:name="HTTP Listener Configuration"/>
    <http:listener-config name="HTTP_Listener_Configuration1" host="0.0.0.0" port="7896" doc:name="HTTP Listener Configuration"/>
    <flow name="flowvariableFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/Flow" doc:name="HTTP"/>
        <logger message="********After Http*************Request is::::::::::::" level="INFO" doc:name="Logger"/>
        <set-variable variableName="FvCity" value="#[message.inboundProperties.'http.query.params'.[City]]" doc:name="Variable"/>
        <set-payload value="#[flowVars.FvCity]" doc:name="Set Payload"/>
        <logger message="***********AFter Setpayload is:::::::::#[payload]" level="INFO" doc:name="Logger"/>
    </flow>
    <flow name="flowvariableFlow1">
        <http:listener config-ref="HTTP_Listener_Configuration1" path="/FlowVaraible2" doc:name="HTTP"/>
        <logger message="********After Http***********" level="INFO" doc:name="Logger"/>
        <set-variable variableName="JOB" value="ITJOB" doc:name="Variable"/>
        <flow-ref name="flowvariableSub_Flow" doc:name="flowvariableSub_Flow"/>
    </flow>
    <sub-flow name="flowvariableSub_Flow">
        <logger message="*********Received Request from Subflow************" level="INFO" doc:name="Logger"/>
        <set-payload value="#[flowVars.JOB]" doc:name="Set Payload"/>
        <logger message="*******In Subflow SetPayload is************************#[payload]" level="INFO" doc:name="Logger"/>
        <flow-ref name="flowvariableFlow2" doc:name="flowvariableFlow2"/>
    </sub-flow>
    <flow name="flowvariableFlow2">
        <set-payload value="#[flowVars.JOB]" doc:name="Set Payload"/>
        <logger message="*****After PrivateFlow**********#[payload]" level="INFO" doc:name="Logger"/>
    </flow>
</mule>
